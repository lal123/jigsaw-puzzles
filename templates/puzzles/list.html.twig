{% extends 'base.html.twig' %}

{% block title %}Puzzles List{% endblock %}

{% block body %}
        <div class="container">
            <h1 class="h3 mb-3 font-weight-normal">{% trans %}Your Puzzles{% endtrans %}</h1>
        </div>
        <div class="container">
            <div class="row">
                <form method="get" action="{{ path('your_puzzles_list') }}">
                    <input type="text" name="query" value="{{ query }}" />
                      <button class="btn btn-primary" type="submit">
                          Search
                      </button>
                </form>
            </div>
            <div class="row">
                  {{ count }} puzzles
                  {% if pages > 0 %}
                  Page :
                  {% for p in 1..pages %}
                        {% if p == page %}
                        {{ p }}
                        {% else %}
                        <a href="{{ path(app.request.attributes.get('_route'), {'page': p, 'query': query}) }}"{# onclick="document.location.href='#{{ path(app.request.attributes.get('_route'), {'page': p, 'query': query}) }}'; return false;"#}>{{ p }}</a>
                        {% endif %}
                        &nbsp;
                  {% endfor %}
                  {% endif %}
            </div>
            <ul>
            {% for puzzle in puzzles %}
                <li>
                    {{ puzzle.localetitles()[app.request.locale] }}
                    <img src="/puzzles/preview/{{ app.request.locale }}/{{ puzzle.filename }}" style="max-width: 100px" alt="{{ puzzle.localetitles()[app.request.locale] }}" />
                    | <a href="{{ path('your_puzzles_edit', {id: puzzle.id}, false) }}">Edit</a>
                    | <a class="puzzle_edit_modal" href="{{ path('your_puzzles_edit_modal', {id: puzzle.id}, false) }}" data-toggle="modal">Edit (modal)</a>
                    | <a href="{{ path('app_puzzles_delete', {id: puzzle.id}, false) }}">Delete</a>
                </li>
            {% endfor %}
            </ul>
        </div>
        <div class="container">
            <a href="{{ path('your_puzzles_create', {}, false) }}">{% trans %}Create a puzzle{% endtrans %}</a>
