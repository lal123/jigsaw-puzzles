{% extends 'base.html.twig' %}

{% block title %}Your account !{% endblock %}

{% block body %}
    {{ form_start(form, {
            'attr': {
                'invalidate': 'invalidate',
                'class': 'col-lg-5' 
            }
        })
    }}
    <h1 class="h3 mb-3 font-weight-normal">Your account</h1>
    {# pass a string argument to get only the messages of that type #}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-notice">
            {{ message }}
        </div>
    {% endfor %}

    {# pass an array argument to get the messages of those types  #}
    {% for label, messages in app.flashes(['warning', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_end(form) }}
    <br />
    <br />
    <a href="{{ path('app_delete_account') }}" onclick="if(!confirm('Are you sure ?')) { return false; }">{% trans %}player.delete.title{% endtrans %}</a>
{% endblock %}